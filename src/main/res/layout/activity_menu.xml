<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activityMenu">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_flag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_road_" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/main_LBL_gameSensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="game with sensors"
            android:textStyle="bold"
            android:layout_marginTop="220dp"
            android:layout_marginStart="70dp"
            android:textSize="20dp"
            android:layout_weight="1"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_LBL_gameButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="game with buttons"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginStart="70dp"
        android:textSize="20dp"
        android:layout_weight="1"

        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_LBL_tableRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table of records"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="340dp"
        android:layout_marginStart="80dp"
        android:layout_weight="1"
        />

</RelativeLayout>